<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Koma"
            android:textStyle="bold"
            android:textSize="35sp"
            android:textColor="#40916c"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sebuah Platform untuk Jual-Beli Material Toko Bangunan "
            android:textSize="17sp"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:src="@drawable/building_materials_circle"
            android:layout_marginVertical="60dp"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/btn_to_sign_up_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DAFTAR"
            android:paddingVertical="13dp"
            android:backgroundTint="#2a9d8f"/>

        <Button
            android:id="@+id/btn_to_sign_in_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SIGN IN"
            android:paddingVertical="13dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#2a9d8f"/>



    </LinearLayout>

</LinearLayout>