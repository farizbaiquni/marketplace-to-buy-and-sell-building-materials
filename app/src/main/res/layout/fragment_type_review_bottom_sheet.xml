<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TypeReviewBottomSheetFragment">

    <!-- TODO: Update blank fragment layout -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingVertical="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="JENIS REVIEW"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#ced4da"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="20dp"/>

            <Button
                android:id="@+id/btn_review_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Review Produk"
                android:textAllCaps="false"
                android:backgroundTint="#1e6091"
                android:textColor="@color/white"
                android:layout_marginHorizontal="10dp"/>


            <Button
                android:id="@+id/btn_review_shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#2a9d8f"
                android:text="Review Toko"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_marginHorizontal="10dp"/>

        </LinearLayout>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>