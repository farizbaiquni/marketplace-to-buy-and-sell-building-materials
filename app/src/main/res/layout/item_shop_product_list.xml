<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginVertical="15dp"
    android:layout_marginHorizontal="17dp"
    android:paddingVertical="10dp">

    <ImageView
        android:id="@+id/shop_product_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/add_student"
        android:contentDescription="product"
        android:layout_gravity="center_vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="20dp">

        <TextView
            android:id="@+id/shop_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Keramik corak bunga"
            android:textStyle="bold"
            android:textSize="17sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jumlah stok : "/>
            <TextView
                android:id="@+id/shop_product_stock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="200 buah"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terjual : "/>
            <TextView
                android:id="@+id/shop_product_sold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="20 buah"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status Produk : "/>
            <TextView
                android:id="@+id/shop_product_product_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Aktif"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>